{
  "name": "@feq/mokia",
  "version": "0.6.0",
  "description": "A simple mock server.",
  "main": "libs/index.js",
  "types": "types/index.d.ts",
  "bin": "bin/cli.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "clean": "rimraf ./libs/**",
    "lint": "eslint src/**/*.ts",
    "build": "npm run clean && tsc",
    "test": "cross-env DEBUG=mokia:* mocha",
    "test:watch": "cross-env DEBUG=mokia:* nyc mocha -w",
    "test:nyc": "cross-env DEBUG=mokia:* nyc mocha",
    "demo": "cross-env NODE_ENV=development node ./bin/cli ./example/index.js --watch"
  },
  "files": [
    "/bin",
    "/libs",
    "/types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/varHarrie/mokia.git"
  },
  "keywords": [
    "mock",
    "server"
  ],
  "author": "varharrie <varharrie@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/varHarrie/mokia/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "homepage": "https://github.com/varHarrie/mokia#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.16"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/debug": "4.1.5",
    "@types/express": "^4.17.3",
    "@types/meow": "^5.0.0",
    "@types/node": "^12.12.30",
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "clear-module": "^4.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.8.23",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "meow": "^6.1.0",
    "ora": "^4.0.3",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
